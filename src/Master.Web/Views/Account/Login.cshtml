	</div>


	<script>
		var app;


		layui.use(config.layuiModules, function () {
			var $ = layui.$
				, setter = layui.setter
				, admin = layui.admin
				, form = layui.form
				, router = layui.router()
				, search = router.search;

			app = new Vue({
				el: '#LAY-user-login',
				data: {
					providers: []
				},
				methods: {
					loadExternalLoginProviders: function () {
						var that = this;
						abp.ajax({
							type: 'get',
							url: "/api/tokenauth/GetExternalAuthenticationProviders",
							success: function (data) {
								console.log(data);
								that.providers = data;
							}
						})
					},
					showAuthUrl: function (provider) {
						layer.open({
							type: 2,
							title: '登录',
							shade: 0.8,
							area: ['400px', '400px'],
							content: provider.authUrl
						});
					}
				},
				mounted: function () {
					this.loadExternalLoginProviders();
				}
			})


			form.render();
			$('input[type=text]:first-child').focus();
			//提交
			form.on('submit(LAY-user-login-submit)', function (obj) {
				console.log(obj);

				abp.ui.setBusy(
					$('body'),

					abp.ajax({
						contentType: 'application/x-www-form-urlencoded',
						url: "/api/tokenauth/authenticate",
						data: obj.field,
						success: function (data) {
							console.log(data);
							var returnUrl = $("input[name='returnUrl']").val();
                            $.cookie("token", data.encryptedAccessToken, { path: '/' });
                            $.removeCookie("simulateLogin", { path: '/' });
							layer.msg('登入成功', {
								icon: 1
								, time: 1000
							}, function () {
								location.href = $("input[name='returnurl']").val();
							})

						}
					})
				);
				//请求登入接口
				//admin.req({
				//    url: "/Account/Login" //实际使用请改成服务端真实接口

				//    ,type:"post"
				//    , data: obj.field
				//    , done: function (res) {

				//        //请求成功后，写入 access_token
				//        layui.data(setter.tableName, {
				//            key: setter.request.tokenName
				//            , value: res.data.access_token
				//        });

				//        //登入成功的提示与跳转
				//        layer.msg('登入成功', {
				//            offset: '15px'
				//            , icon: 1
				//            , time: 1000
				//        }, function () {
				//            location.href = '../'; //后台主页
				//        });
				//    }
				//});

			});


		});
		//第三方登录接口
		function doExternalAuthentication(authModel) {
			console.log(authModel);
			layer.closeAll("iframe");
			abp.ui.setBusy(
				$('body'),

				abp.ajax({
					contentType: "application/x-www-form-urlencoded",
					url: "/api/tokenauth/externalAuthenticate",
					data: authModel,
					success: function (data) {
						console.log(data);
						var returnUrl = $("input[name='returnUrl']").val();
                        $.cookie("token", data.encryptedAccessToken, { path: '/' });
                        $.removeCookie("simulateLogin", { path: '/' });
						layer.msg('登入成功', {
							icon: 1
							, time: 1000
						}, function () {
							location.href = $("input[name='returnurl']").val();
						})

					}
				})
			);
		}
	</script>
</body>
</html>

